{
  "name": "elabins-portfolio-block",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preview": "npm-run-all --parallel sync wpstart tailwindwatch",
    "buildwp": "wp-scripts build",
    "build": "npm-run-all --sequential buildwp tailwindbuild",
    "wpstart": "cross-env NODE_OPTIONS=--experimental-vm-modules wp-scripts start",
    "wp-now": "npx @wp-now/wp-now start",
    "start": "npm-run-all --parallel wpstart tailwindwatch wp-now",
    "tailwindbuild": "tailwindcss -i ./src/index.css -o ./build/index.css --minify",
    "tailwindwatch": "tailwindcss -i ./src/index.css -o ./build/index.css --watch --minify",
    "prettier": "prettier",
    "gen-stats": "node .github/scripts/github-profile-generator.js",
    "zip-plugin": "./build-plugin.sh"
  },
  "keywords": [
    "wordpress",
    "gutenberg",
    "portfolio",
    "github-stats"
  ],
  "author": "Mohammed Ashad MM",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.1",
    "@tailwindcss/typography": "^0.5.2",
    "@wordpress/scripts": "^26.19.0",
    "browser-sync": "^2.27.10",
    "cross-env": "^7.0.3",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "tailwindcss": "^3.1.4"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dotenv": "^16.4.5"
  }
}
